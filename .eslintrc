{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "indent": [
      2,
      2,
      {"SwitchCase": 1}
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "brace-style": [
      2,
      "1tbs",
      { "allowSingleLine": true }
    ],
    "no-console": 0
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "AFRAME"
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
  }
}
